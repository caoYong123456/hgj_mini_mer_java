            fin_status,
            ser_status,
            is_affect,
            status,
            create_time,
            update_time
    </sql>

    <!-- 根据主键查询-->
    <select id="getById" resultMap="BaseMap" parameterType="java.lang.String" >
        select
        <include refid="Base_Column_List" />
        from s_house
        where id = #{id}
    </select>

    <!-- 查询列表-->
    <select id="getList" resultMap="BaseMap"  parameterType="com.ej.hgj.entity.hu.HgjHouse">
        select
        <include refid="Base_Column_List" />
        from s_house where 1 = 1
        <if test="budName != null">
            and bud_name like CONCAT('%', #{budName,jdbcType=VARCHAR},'%') ESCAPE '/'
        </if>
        <if test="unitNo != null">
            and unit_no like CONCAT('%', #{unitNo,jdbcType=VARCHAR},'%') ESCAPE '/'
        </if>
    </select>

    <!-- 根据客户编号查询房屋列表-->
    <select id="getListByCstCode" resultMap="BaseMap" parameterType="java.lang.String" >
        select
        <include refid="Base_Column_List" />
        from
            (
                select
                    hu.*
                from
                    s_rcr rcr
                        left join s_contract con on con.id = rcr.ctt_id
                        left join s_house hu on hu.id = rcr.res_id
                where
                        rcr.cst_id = (
                        select
                            id
                        from
                            s_cst
                        where
                            code = #{cstCode}
                    )
            ) t

    </select>

    <!-- 查询分期-->
    <select id="queryStages" resultMap="BaseMap" parameterType="java.lang.String" >
        select
            grp_code,grp_name
        from s_house
        where org_id=#{orgId}
        group by grp_code,grp_name
    </select>

    <!-- 查询楼栋-->
    <select id="queryBuilding" resultMap="BaseMap" parameterType="java.lang.String" >
        select
            bud_id,bud_name
        from s_house
        where grp_code = #{grpCode} and org_id=#{orgId}
        group by bud_id,bud_name
    </select>

    <!-- 查询房号-->
    <select id="queryRoomNum" resultMap="BaseMap" parameterType="java.lang.String" >
        select
            id,res_name
        from s_house
        where bud_id = #{budId}
        group by id,res_name
    </select>

