    <select id="queryByUserId" resultMap="BaseMap" parameterType="java.lang.String" >
        SELECT
            p.project_name as org_name,
            h.bud_name
        FROM
            s_house h
                LEFT JOIN t_pro_config p ON p.project_num = h.org_id
        WHERE
                h.bud_id IN (
                SELECT
                    bud_id
                FROM
                    t_user_build
                WHERE
                    mobile = #{userId}
                  AND delete_flag = 0
            )
        group by p.project_name,h.bud_name
    </select>

